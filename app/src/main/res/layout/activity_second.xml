<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#f83d8fb7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#fff"
                android:elevation="8dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="CNN"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_title"
                    android:layout_marginTop="10dp"
                    android:text="30 min ago" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/news_title"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pexels_photo_large" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:elevation="8dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/news_title1"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Hampden-Sydney College in Virginia, Looked up one of the Obscure Latin Words"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/news_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_title1"
                    android:layout_marginTop="10dp"
                    android:text="1 hr ago" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/news_title1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_image" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:elevation="8dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/news_title2"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum Dolor Amet, Consectetur Adipiscing Elit Ipsum Dolor Amet"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/news_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_title2"
                    android:layout_marginTop="10dp"
                    android:text="2 hr ago" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/news_title2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pexels_photo_large" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>